<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/inc"
        layout="@layout/tay"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/pratlicular_textpaixu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="综合排序"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/pratlicular_textyouxian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="销量优先"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/pratlicular_textshaixuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="筛选"
            android:textColor="@color/main"
            android:gravity="center"

            />
        <CheckBox
            android:id="@+id/pratlicular_cheerkbox_yangshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:button="@null"
            android:background="@drawable/shaixuan"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/particular_rec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"></android.support.v7.widget.RecyclerView>
</LinearLayout>
