<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
<include
    android:id="@+id/seekactivity_seek"
    layout="@layout/include_search"
    ></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ListView
               android:id="@+id/historyseek"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               ></ListView>
       </RelativeLayout>
        <LinearLayout
            android:id="@+id/seek_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorw"
            android:layout_marginEnd="52dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/text_baby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_baobei"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/text_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_dianpu"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/text_seekdelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_seekdelete"
            android:textColor="@color/red"
            android:background="@color/colorw"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            />
    </RelativeLayout>


</LinearLayout>
