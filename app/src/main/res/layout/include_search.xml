<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout.Toolbar"
    android:background="@color/main">

    <ImageView
        android:id="@+id/leftImageView"
        style="@style/ImageView.Toolbar"
        android:src="@drawable/ic_action_back" />

    <EditText
        android:id="@+id/keywordEditText"
        style="@style/EditText.Search1"
        android:layout_toLeftOf="@+id/rightImageView"
        android:layout_toRightOf="@+id/leftImageView" />
    <TextView
        android:id="@+id/classify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宝贝"
        android:textColor="@color/colorw"
        android:layout_marginEnd="10dp"
        android:layout_alignBaseline="@+id/keywordEditText"
        android:layout_alignBottom="@+id/keywordEditText"
        android:layout_toStartOf="@+id/classimageView" />
        <ImageView
            android:id="@+id/classimageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baobeixuanze"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/rightImageView"
            android:layout_marginEnd="7dp" />
    <ImageView
        android:id="@+id/rightImageView"
        style="@style/ImageView.Toolbar"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_search" />

</RelativeLayout>
